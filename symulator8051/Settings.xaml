<Window x:Class="symulator8051.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="197" Width="402" ShowInTaskbar="False" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Taktowanie Układu" Grid.Row="0" Grid.Column="0"/>
        <Slider Maximum="8000000" Minimum="1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="2" Grid.Row="1"/>
        <Label Content="Odświerzanie wyświetlacza" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Slider Maximum="1000" Minimum="1" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"/>
        <TextBox Grid.Column="2" Grid.Row="4"/>
    </Grid>
    
</Window>
